{
  "name": "ERC1400",
  "version": "0.1.0-dev",
  "description": "Codefi Asset's ERC1400 implementation",
  "files": [
    "contracts",
    "tests"
  ],
  "scripts": {
    "build:ERC1400": "sol-merger \"./contracts/ERC1400.sol\" ./artifacts",
    "build:STERegistryV1": "sol-merger \"./contracts/STERegistryV1.sol\" ./artifacts",
    "build:STEFactory": "sol-merger \"./contracts/STEFactory.sol\" ./artifacts",
    "build:ERC1400TokensValidatorSTE": "sol-merger \"./contracts/extensions/tokenExtensions/ERC1400TokensValidatorSTE.sol\" ./artifacts",
    "build:ERC1400TokensCheckerSTE": "sol-merger \"./contracts/extensions/tokenExtensions/ERC1400TokensCheckerSTE.sol\" ./artifacts",
    "build:MultipleIssuanceModule": "sol-merger \"./contracts/modules/MultipleIssuance/MultipleIssuanceModule.sol\" ./artifacts",
    "build:CheckpointsModule": "sol-merger \"./contracts/modules/Checkpoints/CheckpointsModule.sol\" ./artifacts",
    "build:DividendsModule": "sol-merger \"./contracts/modules/Checkpoints/Dividends/DividendsModule.sol\" ./artifacts",
    "build:VotingModule": "sol-merger \"./contracts/modules/Checkpoints/Voting/VotingModule.sol\" ./artifacts",
    "build:ModulesDeployer": "sol-merger \"./contracts/modules/ModulesDeployer.sol\" ./artifacts",
    "build:MultipleIssuanceModuleFactory": "sol-merger \"./contracts/modules/MultipleIssuance/MultipleIssuanceModuleFactory.sol\" ./artifacts",
    "build:CheckpointsModuleFactory": "sol-merger \"./contracts/modules/Checkpoints/CheckpointsModuleFactory.sol\" ./artifacts",
    "build:DividendsModuleFactory": "sol-merger \"./contracts/modules/Checkpoints/Dividends/DividendsModuleFactory.sol\" ./artifacts",
    "build:VotingModuleFactory": "sol-merger \"./contracts/modules/Checkpoints/Voting/VotingModuleFactory.sol\" ./artifacts",
    "build:ERC1400TokensValidator": "sol-merger \"./contracts/extensions/tokenExtensions/ERC1400TokensValidator.sol\" ./artifacts",
    "build:TokensValidatorFactory": "sol-merger \"./contracts/extensions/tokenExtensions/TokensValidatorFactory.sol\" ./artifacts",
    "build:TokensCheckerFactory": "sol-merger \"./contracts/extensions/tokenExtensions/TokensCheckerFactory.sol\" ./artifacts",
    "build:BatchBalanceReader": "sol-merger \"./contracts/tools/BatchBalanceReader.sol\" ./artifacts",
    "build:ERC20HoldableToken": "sol-merger \"./contracts/tokens/ERC20HoldableToken.sol\" ./artifacts",
    "build:DVP": "sol-merger \"./contracts/tools/DVP.sol\" ./artifacts",
    "build:UserWallets": "sol-merger \"./contracts/tools/UserWallets.sol\" ./artifacts",
    "core": "yarn run build:STERegistryV1 && yarn run build:STEFactory && yarn run build:ModulesDeployer && yarn run build:MultipleIssuanceModuleFactory && yarn run build:TokensValidatorFactory && yarn run build:TokensCheckerFactory && yarn run build:CheckpointsModuleFactory && yarn run build:DividendsModuleFactory && yarn run build:VotingModuleFactory && yarn run build:ERC20HoldableToken && yarn run build:DVP && yarn run build:UserWallets",
    "exten": "yarn run build:BatchBalanceReader && yarn run build:ERC1400TokensValidatorSTE && yarn run build:ERC1400TokensCheckerSTE && yarn run build:MultipleIssuanceModule && yarn run build:ERC1400 && yarn run build:CheckpointsModule && yarn run build:DividendsModule && yarn run build:VotingModule",
    "all": "yarn core && yarn exten",
    "build:ERC1400CertificateNonce": "sol-merger \"./contracts/certificate/ERC1400CertificateNonce.sol\" ./artifacts",
    "build:ERC1400CertificateSalt": "sol-merger \"./contracts/certificate/ERC1400CertificateSalt.sol\" ./artifacts",
    "build:DVPHoldableLockable": "sol-merger \"./contracts/tools/DVPHoldableLockable.sol\" ./artifacts",
    "build:ERC1400HoldableCertificateNonceToken": "sol-merger \"./contracts/certificate/ERC1400HoldableCertificateNonceToken.sol\" ./artifacts",
    "build:ERC1400HoldableCertificateSaltToken": "sol-merger \"./contracts/certificate/ERC1400HoldableCertificateSaltToken.sol\" ./artifacts",
    "build:ERC1400TokensValidator": "sol-merger \"./contracts/extensions/tokenExtensions/ERC1400TokensValidator.sol\" ./artifacts",
    "build": "yarn run clean && yarn run build:ERC1400 && yarn run build:ERC1400TokensValidator && yarn run build:ERC1400HoldableCertificateNonceToken && yarn run build:ERC1400HoldableCertificateSaltToken && yarn run build:DVPHoldableLockable",
    "clean": "rm -rf artifacts",
    "coverage": "yarn truffle run coverage",
    "env": "node setup.js",
    "lint": "eslint ./migrations ./test ",
    "lint:fix": "eslint ./test ./migrations --fix",
    "lint:sol": "solium --no-soliumignore -d .",
    "lint:sol:fix": "solium --no-soliumignore -d . --fix",
    "lint:all": "yarn run lint && yarn run lint:sol",
    "lint:all:fix": "yarn run lint:fix && yarn run lint:sol:fix",
    "console": "truffle console",
    "remix": "python -mwebbrowser http://localhost:8080 && remix-ide",
    "start:chain": "ganache-cli -p 7545",
    "test": "yarn truffle test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ConsenSys/ERC1400"
  },
  "keywords": [
    "boilerplate",
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security",
    "ERC1820",
    "ERC777",
    "ERC1410",
    "ERC1400"
  ],
  "author": "Gauthier Petetin <gauthierpetetin@hotmail.com>",
  "contributors": [
    "Julien Marchand <julien.marchand4@gmail.com>",
    "Julien Tanay <julien.tanay@gmail.com>"
  ],
  "license": "Apache",
  "devDependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.23.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-truffle": "^0.3.1",
    "eth-lib": "^0.1.29",
    "ethereumjs-testrpc-sc": "6.1.6",
    "ethereumjs-util": "^5.1.2",
    "fs-extra": "^7.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "remix-ide": "^0.10.3",
    "sol-merger": "0.1.4",
    "solidity-coverage": "0.7.10",
    "solium": "^1.2.5",
    "solium-plugin-zeppelin": "^0.0.2",
    "web3-utils": "^1.2.8"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "erc1820": "git+https://github.com/0xjac/ERC1820#885549fe3e9f0fd22444f78532be3dce4ee8a5e2",
    "ethereumjs-wallet": "^0.6.3",
    "openzeppelin-solidity": "2.1.3",
    "truffle": "5.0.1",
    "truffle-hdwallet-provider": "1.0.1",
    "@truffle/hdwallet-provider": "1.0.18",
    "truffle-plugin-verify": "^0.3.10"
  },
  "resolutions": {
    "web3": "1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
